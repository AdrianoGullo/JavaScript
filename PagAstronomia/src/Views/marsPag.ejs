<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<main>
    <section class="py-5 text-center container">
      <div class="row py-lg-5">
        <video id="jamswebb" class="img-fluid" style="width: 100%; height: auto;" autoplay muted loop>
          <source src="/Videos/marsPage.mp4" type="video/mp4">
          Seu navegador não suporta a tag de vídeo.
        </video>      </div>
    </section>

    <div class="card text-center" style="margin-right: 14%; margin-left: 14%; margin-bottom: 15%;">
      <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
          <li class="nav-item">
            <a class="nav-link" id="curiosityTab">Curiosity</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" id="opportunityTab">Opportunity</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="spiritTab">Spirit</a>
          </li>
        </ul>
      </div>
      
      <div class="card-body" id="curiosityBody" style="display: none;">
        <div class="row">
          <!-- Primeiro bloco ocupando 2/5 do espaço -->
          <div class="col-lg-4 col-md-4 col-sm-12 d-flex flex-column align-items-center">
            <p class="card-text text-center">With supporting text below as a natural lead-in to additional content.</p>
      
            <form class="w-100">
              <!-- Seu formulário aqui -->
            </form>
      
            <div class="w-100 mt-auto">
              <img src="/Imagens/PaginaMars/curiosity.jpg" class="img-fluid" alt="Curiosity Rover Image" style="width: 100%; object-fit: cover;">
            </div>
          </div>
      
          <!-- Carrossel Principal -->
          <div class="col-lg-8 col-md-8 col-sm-12">
            <div id="carouselExample" class="carousel slide">
              <div class="carousel-inner">
                <% if (dadosMars && Array.isArray(dadosMars.photos)) { %>
                  <% dadosMars.photos.forEach(function(photo, index) { %>
                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                      <img src="<%= photo.img_src %>" class="d-block w-100" alt="Curiosity Image <%= index %>" style="aspect-ratio: 1/1; max-height: 500px;">
                    </div>
                  <% }); %>
                <% } else { %>
                  <p>No photos available.</p>
                <% } %>
              </div>
            </div>

            <!-- Miniaturas -->
            <div class="container mt-4">
              <div class="d-flex flex-wrap overflow-auto" id="thumbnailContainer">
                <% if (dadosMars && Array.isArray(dadosMars.photos)) { %>
                  <% dadosMars.photos.forEach(function(photo, index) { %>
                    <img src="<%= photo.img_src %>" class="img-thumbnail mx-1 thumbnail" data-bs-slide-to="<%= index %>" alt="Curiosity Thumbnail <%= index %>" style="width: 80px; height: 80px;">
                  <% }); %>
                <% } else { %>
                  <p>No photos available.</p>
                <% } %>
              </div>
            </div>
          </div>


      <div class="card-body" id="opportunityBody">
        <h5 class="card-title">Opportunity Rover</h5>
        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
      </div>
      <div class="card-body" id="spiritBody" style="display: none;">
        <h5 class="card-title">Spirit Rover</h5>
        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
      </div>
    </div>
    
    <script src="/scripts/marsPag.js"></script>

</main>
<%- include('includes/footer'); %>
