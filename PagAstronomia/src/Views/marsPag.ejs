<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<main>
    <section class="py-5 text-center container">
      <div class="row py-lg-5">
        <img class="img-fluid" src="/Imagens/PaginaMars/marsPage.png" alt="Generic placeholder image" width="100%" height="315">
      </div>
    </section>

    <div class="card text-center" style="margin-right: 14%; margin-left: 14%; margin-bottom: 15%;">
      <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
          <li class="nav-item">
            <a class="nav-link" id="curiosityTab">Curiosity</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" id="opportunityTab">Opportunity</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="spiritTab">Spirit</a>
          </li>
        </ul>
      </div>
      
      <div class="card-body" id="curiosityBody" style="display: none;">
        <div class="row">
          <!-- Primeiro bloco ocupando 2/5 do espaço -->
          <div class="col-lg-4 col-md-4 col-sm-12 d-flex flex-column align-items-center">
            <img src="path/to/your/image.jpg" class="img-fluid mb-3" alt="Curiosity Rover Image">
            <p class="card-text text-center">With supporting text below as a natural lead-in to additional content.</p>
            <form class="w-100">
              <!-- Seu formulário aqui -->
            </form>
          </div>
          
          <!-- Segundo bloco ocupando 3/5 do espaço -->
          <div class="col-lg-8 col-md-8 col-sm-12">
            <!-- Carrossel de Imagens -->
            <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="path/to/your/image1.jpg" class="d-block w-100" alt="Curiosity Image 1" style="aspect-ratio: 1/1; max-height: 500px;">
                </div>
                <div class="carousel-item">
                  <img src="path/to/your/image2.jpg" class="d-block w-100" alt="Curiosity Image 2" style="aspect-ratio: 1/1; max-height: 500px;">
                </div>
                <!-- itens do carrossel  -->
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden"></span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden"></span>
              </button>
            </div>
      
            <!-- Miniaturas com rolagem horizontal -->
            <div class="container mt-4">
              <div class="d-flex overflow-hidden" style="width: 400px;">
                <div class="d-flex" id="thumbnailContainer">
                  <img src="path/to/your/image1.jpg" class="img-thumbnail mx-1" alt="Curiosity Thumbnail 1" style="width: 80px; height: 80px;">
                  <img src="path/to/your/image2.jpg" class="img-thumbnail mx-1" alt="Curiosity Thumbnail 2" style="width: 80px; height: 80px;">
                  <img src="path/to/your/image3.jpg" class="img-thumbnail mx-1" alt="Curiosity Thumbnail 3" style="width: 80px; height: 80px;">
                  <img src="path/to/your/image4.jpg" class="img-thumbnail mx-1" alt="Curiosity Thumbnail 4" style="width: 80px; height: 80px;">
                  <img src="path/to/your/image5.jpg" class="img-thumbnail mx-1" alt="Curiosity Thumbnail 5" style="width: 80px; height: 80px;">
                  <!-- Adicione mais imagens conforme necessário -->
                </div>
              </div>
            </div>            
            
          </div>
        </div>
      </div>

      <div class="card-body" id="opportunityBody">
        <h5 class="card-title">Opportunity Rover</h5>
        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
      </div>
      <div class="card-body" id="spiritBody" style="display: none;">
        <h5 class="card-title">Spirit Rover</h5>
        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
      </div>
    </div>
    
    <script src="/scripts/marsPag.js"></script>

</main>
