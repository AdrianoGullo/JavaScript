<div id="insightsJW" class="card-body" style="display: none;">
    <div class="row row-cols-1 g-3">
        <% if (insights !== undefined) { %>
            <% insights.forEach((insight, index) => { %>
                <div class="d-flex flex-column flex-md-row text-body-secondary pt-3 card-divider" id="upcomingEvents1" style="align-items: center; justify-content: center; ">
                    
                    <!-- Carousel -->
                    <div id="carousel<%= index %>" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <% insight.image_url.forEach((_, i) => { %>
                                <li data-target="#carousel<%= index %>" data-slide-to="<%= i %>" class="<%= i === 0 ? 'active' : '' %>"></li>
                            <% }); %>
                        </ol>
                        <div class="carousel-inner" style="border-radius: 14px;">
                            <% insight.image_url.forEach((photo, i) => { %>
                                <div class="carousel-item <%= i === 0 ? 'active' : '' %>" style="background-color: black;">
                                    <img src="<%= photo %>" class="d-block" alt="Image" style="object-fit: cover; max-width: 400px; height: auto;" data-toggle="modal" data-target="#modalInsights<%= index %>">
                                </div>
                            <% }); %>
                        </div>
                        <a class="carousel-control-prev" href="#carousel<%= index %>" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel<%= index %>" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
            
                    <div class="d-flex flex-column" style="margin-left: 10px; margin-top: 4px;">
                        <div class="d-flex align-items-center">
                            <strong><span><%= insight.title %></span></strong>
                        </div>
                        <div class="d-flex align-items-center">
                            <span class="badge mr-2 badge-warning">
                                <%= insight.type %>
                            </span>
                            <span class="badge mr-2 badge-primary">
                                <%= insight.date %>
                            </span>
                        </div>
                        <!-- MODAL ReadMore -->
                        <%- include('readMore_insights', { insight, index }) %>
                        <div id="descEvento1" class="text-left" style="max-height: 5em; overflow: auto; text-overflow: ellipsis; width: 100%; margin-top: 1.5%;"><%= insight.description %></div>
                        <button type="button" class="btn btn-dark" style="padding: 0.1rem 0.15rem; height: 0.7rem; font-size: 10px; line-height: 0.4rem; width: 7%; min-width: 60px; margin-top: 2%;" data-toggle="modal" data-target="#modalInsights<%= index %>">Read more</button>
                    </div>

                </div>
            <% }); %>
        <% } %>                        
    </div>
</div>