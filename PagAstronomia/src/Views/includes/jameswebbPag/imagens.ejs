<div id="imagesJW" class="card-body">
    <div class="row row-cols-1 g-3">
        <% if (photos !== undefined) { %>
            <% photos.forEach((photo, index) => { %>
                <div class="d-flex flex-column flex-md-row text-body-secondary pt-3 card-divider w-100" id="upcomingEvents1"  style="align-items: center; ">
                    <img src="<%= photo.image_url[0] %>" class="img-fluid" style="max-width: 400px; height: auto; margin-bottom: 10px; border-radius: 14px; background-color: black; cursor: pointer;" data-toggle="modal" data-target="#modal-<%= index %>"/>
                    <div class="d-flex flex-column" style="margin-left: 10px;">
                        <div class="d-flex align-items-center">
                            <strong><span><%= photo.title %></span></strong>
                        </div>
                        <div class="d-flex align-items-center">
                            <span class="badge mr-2 badge-primary">
                                <%= photo.date %>
                            </span>
                            <button type="button" class="btn btn-dark" style="padding: 0.1rem 0.15rem; height: 0.7rem; font-size: 10px; line-height: 0.4rem;" data-toggle="modal" data-target="#modal-<%= index %>">Read more</button>
                        </div>
                        <!-- MODAL ReadMore -->
                        <%- include('readMore_images', { photo, index }) %>
                        <div id="descEvento1" class="text-left" style="max-height: 5em; overflow: auto; text-overflow: ellipsis; width: 100%; margin-top: 1.5%;"><%= photo.description %></div>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>
</div>