<div class="modal fade" id="modalLaunch-<%= index %>" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle"><%= launch.title %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="container-fluid">
        <!-- Conteúdo do modal - Titulo, data, imagem, descrição -->
        <div class="row ml-10px mt-2">
          <div class="col-md-6">
            <p>
                <span class="badge mr-2  <% if (launch.status === 'done') { %> badge-danger <% } else if (launch.status === 'live') { %> badge-success <% } else { %> badge-primary <% } %>">
                  <%= launch.date %>
                </span>
                  <% if (launch.status === 'done') { %>
                <span class="badge badge-danger mr-2">Ended</span>
                  <% } else if (launch.status === 'live') { %>
                <span class="badge badge-success mr-2">In Progress</span>
                  <% } else { %>
                <span class="badge badge-light mr-2">Scheduled</span>
                  <% } %>
                <span  class="badge badge-light mr-2">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-rocket-takeoff" viewBox="0 0 16 16">
                    <path d="M9.752 6.193c.599.6 1.73.437 2.528-.362s.96-1.932.362-2.531c-.599-.6-1.73-.438-2.528.361-.798.8-.96 1.933-.362 2.532"/>
                    <path d="M15.811 3.312c-.363 1.534-1.334 3.626-3.64 6.218l-.24 2.408a2.56 2.56 0 0 1-.732 1.526L8.817 15.85a.51.51 0 0 1-.867-.434l.27-1.899c.04-.28-.013-.593-.131-.956a9 9 0 0 0-.249-.657l-.082-.202c-.815-.197-1.578-.662-2.191-1.277-.614-.615-1.079-1.379-1.275-2.195l-.203-.083a10 10 0 0 0-.655-.248c-.363-.119-.675-.172-.955-.132l-1.896.27A.51.51 0 0 1 .15 7.17l2.382-2.386c.41-.41.947-.67 1.524-.734h.006l2.4-.238C9.005 1.55 11.087.582 12.623.208c.89-.217 1.59-.232 2.08-.188.244.023.435.06.57.093q.1.026.16.045c.184.06.279.13.351.295l.029.073a3.5 3.5 0 0 1 .157.721c.055.485.051 1.178-.159 2.065m-4.828 7.475.04-.04-.107 1.081a1.54 1.54 0 0 1-.44.913l-1.298 1.3.054-.38c.072-.506-.034-.993-.172-1.418a9 9 0 0 0-.164-.45c.738-.065 1.462-.38 2.087-1.006M5.205 5c-.625.626-.94 1.351-1.004 2.09a9 9 0 0 0-.45-.164c-.424-.138-.91-.244-1.416-.172l-.38.054 1.3-1.3c.245-.246.566-.401.91-.44l1.08-.107zm9.406-3.961c-.38-.034-.967-.027-1.746.163-1.558.38-3.917 1.496-6.937 4.521-.62.62-.799 1.34-.687 2.051.107.676.483 1.362 1.048 1.928.564.565 1.25.941 1.924 1.049.71.112 1.429-.067 2.048-.688 3.079-3.083 4.192-5.444 4.556-6.987.183-.771.18-1.345.138-1.713a3 3 0 0 0-.045-.283 3 3 0 0 0-.3-.041Z"/>
                    <path d="M7.009 12.139a7.6 7.6 0 0 1-1.804-1.352A7.6 7.6 0 0 1 3.794 8.86c-1.102.992-1.965 5.054-1.839 5.18.125.126 3.936-.896 5.054-1.902Z"/>
                  </svg> <%= launch.rocket %>
                </span>
              </p>
            <%= launch.description %>
          </div>

          <div class="col-md-6">
            <image class="image-fluid" src="<%= launch.img %>" width="100%" height="300px" style="border-radius: 10px; margin-right: 15px;" />
          </div>
        </div>

        <!-- Informações do modal - Pad, Agencia, Programa -->
        <div class="row" style="margin-top: 15px;">

          <!-- Pad e localização -->
          <div class="col-md-6">
            <div class="d-flex align-items-start ml-1">
              <a href="<%= launch.padImage %>" target="_blank">
                <img class="img-fluid" src="<%= launch.padImage %>" width="100px" height="100px" style="border-radius: 10px; cursor: pointer;" data-toggle="modal" data-target="#padImageModal" alt="Pad Image"/>
              </a>
              <div>
                <div class="d-flex align-items-center mb-2 ml-1">
                  <span class="badge badge-light"><%= launch.padLocation %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                      <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A32 32 0 0 1 8 14.58a32 32 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10"/>
                      <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                    </svg>
                  </span>
                </div>
                <div>
                  <span class="badge badge-light ml-1"><%= launch.pad %></span>
                </div>
              </div>
            </div>
          </div>

          <!-- Agencia e Programa -->
          <div class="col-md-6">
            <div class="d-flex align-items-start">
              <!-- Bloco para texto e botões -->
              <div class="flex-grow-1 pr-3">
                <div class="d-flex flex-column mb-2">
                    <!-- Bloco da Agência -->
                    <div class="d-flex align-items-center mb-2">
                      <span class="badge badge-dark mr-1">Agency:</span>
                      <span class="badge badge-light mr-2"><%= launch.agencia %></span>
                      <button class="btn btn-sm btn-light" type="button" data-toggle="collapse" data-target="#agencyDescription<%= index %>" aria-expanded="false" aria-controls="agencyDescription<%= index %>">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-arrow-down-circle" viewBox="0 0 16 16">
                          <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293z"/>
                        </svg>
                      </button>
                      <div class="d-flex flex-column align-items-end ml-1">
                        <img class="img-fluid" src="<%= launch.agenciaImage %>" style="max-width: 120px; max-height: 35px; object-fit: contain;" />
                      </div>
                    </div>
                    
                    <!-- Descrição da Agência -->
                    <div id="agencyDescription<%= index %>" class="collapse" style="background-color: rgba(10, 10, 10, 0.7); color: white; padding: 10px; border-radius: 10px;">
                      <p style="margin: 0; font-size: 1rem;"><%= launch.agenciaDescription %></p>
                    </div>

                    <!-- Bloco do Programa -->
                    <div class="d-flex align-items-center">
                      <span class="badge badge-dark mr-1">Program:</span>
                      <span class="badge badge-light mr-2"><%= launch.program %></span>
                      <button class="btn btn-sm btn-light" type="button" data-toggle="collapse" data-target="#description<%= index %>" aria-expanded="false" aria-controls="description<%= index %>">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-arrow-down-circle" viewBox="0 0 16 16">
                          <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293z"/>
                        </svg>
                      </button>
                      <div class="d-flex flex-column align-items-end ml-2">
                        <img class="img-fluid" src="<%= launch.programImage %>" style="max-width: 120px; max-height: 35px; object-fit: contain;" />
                      </div>
                    </div>
                    
                    <!-- Descrição do Programa -->
                    <div id="description<%= index %>" class="collapse" style="background-color: rgba(10, 10, 10, 0.7); color: white; padding: 10px; border-radius: 10px;">
                      <p style="margin: 0; font-size: 1rem;"><%= launch.programDescription %></p>
                    </div>

                </div>
              </div>
            </div>
          </div>

        </div>

      </div>

      <div class="modal-footer">
          <a href="/news/index">View all</a>
      </div>
    </div>
  </div>
</div>