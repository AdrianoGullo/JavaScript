<div class="col-md-6 order-md-2 bg-body rounded shadow-sm">
  
  <% if(EventsData !== undefined){ %>
    <% EventsData.forEach(event => { %>
      <div class="d-flex text-body-secondary pt-3" id="upcomingEvents1">
        <image src="<%= event.img %>" width="50px" height="50px" style="margin-top: 7px; border-radius: 10px;" />
        <div class="d-flex flex-column justify-content-between" style="margin-left: 20px;">  
          <div class="d-flex align-items-center">
            <strong><span><%= event.title %></span></strong>
          </div>

          <div class="d-flex align-items-center"> 
            <span class="badge mr-2  <% if (event.status === 'done') { %> badge-danger <% } else if (event.status === 'live') { %> badge-success <% } else { %> badge-primary <% } %>">
              <%= event.date %>
            </span>
            <% if (event.status === 'done') { %>
              <span class="badge badge-danger mr-2">Ended</span>
            <% } else if (event.status === 'live') { %>
              <span class="badge badge-success mr-2">In Progress</span>
            <% } else { %>
              <span class="badge badge-light mr-2">Scheduled</span>
            <% } %>
            <button type="button" class="btn btn-dark" style="padding: 0.1rem 0.15rem; height: 0.7rem; font-size: 10px; line-height: 0.4rem;" data-toggle="modal" data-target=".bd-card-modal-lg">Read more</button> 
          </div>
          
          <%- include('./readMoreModal'); %>

          <div id="tagsEvento1"><span class="badge badge-light mr-2"><%= event.agencia %></span></div>
          <div id="descEvento1" style="max-height: 3em; overflow: auto; text-overflow: ellipsis; width: 100%;"><%= event.description %></div>
        </div>      
      </div>
    <%}); %>
  <%};%>

    <small class="badge badge-light" style="margin-left: 80%; margin-bottom: 3%; margin-top: 5px;">
      <a href="/news/index">View all events</a>
    </small>
    
</div>