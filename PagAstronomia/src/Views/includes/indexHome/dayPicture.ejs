  <div class="wrapper">
    <div class="daycontainer">
      <% apods.forEach(function(apod, index) { %>
          <input type="radio" name="slide" id="card<%= index + 1 %>" <%= index === 1 ? 'checked' : '' %> >
          <label for="card<%= index + 1 %>" class="card">
            <div class="row">
              <div class="icon"> <%= index + 1%> </div>
              <div class="description">
                <h4><%= apod.data.title %></h4>
                <p><%= apod.data.explanation %></p>
                <p>Date: <%= apod.data.date %></p>
              </div>
            </div>
          </label>
        <% }); %>
    </div>
  </div>

