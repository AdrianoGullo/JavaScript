<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="background-color: rgb(255, 255, 255); border-radius: 100px;">
  <ol class="carousel-indicators">
    <% apods.forEach(function(apod, index) { %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" <%= index === 0 ? 'class="active"' : '' %>></li>
    <% }); %>
  </ol>
  <div class="carousel-inner">
    <% apods.forEach(function(apod, index) { %>
        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
          <div class="row">
            <div class="col-md-5 bg-light" style="border-bottom-left-radius: 120px; border-top-left-radius: 120px;">
              <div class="carousel-caption" style="margin-top: 20px;">
                <h5 style="color: black; margin-left: 50px;" class="dispay-2 text-left"><%= apod.data.title %></h5>
                <p style="height: auto; overflow: auto; text-overflow: ellipsis; width: 100%; margin-left: 50px; color: rgb(94, 94, 94); max-height: 450px;" class="text-left"><%= apod.data.explanation %></p>
                <p style="bottom: 5px; color: rgb(0, 0, 0);" class="text-right" >Date: <%= apod.data.date %></p>
              </div>
            </div>
            <div class="col-md-7">
              <% if (apod.data.media_type === "image") { %>
                  <img class="d-block w-100" src="<%= apod.data.hdurl %>" alt="Slide <%= index + 1 %>" style="height: 600px; width: 100%; border-bottom-right-radius: 100px; border-top-right-radius: 100px;">
              <% } else if (apod.data.media_type === "video") { %>
                  <div class="embed-responsive embed-responsive-16by9" style="height: 600px;">
                      <iframe class="embed-responsive-item" src="<%= apod.data.url %>?autoplay=1" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                  </div>
              <% } %>
            </div>
          </div>
        </div>
    <% }); %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev" style="left: -120px;">
    <span class="carousel-control-prev-icon" style="background-color: black; border-radius: 50%;" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next" style="right: -120px;">
    <span class="carousel-control-next-icon" style="background-color: black; border-radius: 50%;" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
